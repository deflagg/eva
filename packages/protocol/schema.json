{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/eva/protocol-v1.schema.json",
  "title": "Eva Protocol v1",
  "type": "object",
  "oneOf": [
    { "$ref": "#/$defs/frame" },
    { "$ref": "#/$defs/detections" },
    { "$ref": "#/$defs/error" },
    { "$ref": "#/$defs/hello" }
  ],
  "$defs": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "frame": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "v",
        "frame_id",
        "ts_ms",
        "mime",
        "width",
        "height",
        "image_b64"
      ],
      "properties": {
        "type": { "const": "frame" },
        "v": { "$ref": "#/$defs/version" },
        "frame_id": { "type": "string", "minLength": 1 },
        "ts_ms": { "type": "integer", "minimum": 0 },
        "mime": { "type": "string", "const": "image/jpeg" },
        "width": { "type": "integer", "minimum": 1 },
        "height": { "type": "integer", "minimum": 1 },
        "image_b64": { "type": "string", "minLength": 1 }
      }
    },
    "detection": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cls", "name", "conf", "box"],
      "properties": {
        "cls": { "type": "integer", "minimum": 0 },
        "name": { "type": "string", "minLength": 1 },
        "conf": { "type": "number", "minimum": 0, "maximum": 1 },
        "box": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4
        }
      }
    },
    "detections": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "v",
        "frame_id",
        "ts_ms",
        "width",
        "height",
        "model",
        "detections"
      ],
      "properties": {
        "type": { "const": "detections" },
        "v": { "$ref": "#/$defs/version" },
        "frame_id": { "type": "string", "minLength": 1 },
        "ts_ms": { "type": "integer", "minimum": 0 },
        "width": { "type": "integer", "minimum": 1 },
        "height": { "type": "integer", "minimum": 1 },
        "model": { "type": "string", "minLength": 1 },
        "detections": {
          "type": "array",
          "items": { "$ref": "#/$defs/detection" }
        }
      }
    },
    "error": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "v", "code", "message"],
      "properties": {
        "type": { "const": "error" },
        "v": { "$ref": "#/$defs/version" },
        "frame_id": { "type": "string" },
        "code": { "type": "string", "minLength": 1 },
        "message": { "type": "string", "minLength": 1 }
      }
    },
    "hello": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "v", "role", "ts_ms"],
      "properties": {
        "type": { "const": "hello" },
        "v": { "$ref": "#/$defs/version" },
        "role": {
          "type": "string",
          "enum": ["ui", "eva", "quickvision"]
        },
        "ts_ms": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
